{
	"manifest_version": 2,

	"name": "微信聊天机器人",
    "short_name": "wxBot",
	"description": "运用于网页版微信的聊天机器人插件",
	"version": "0.2",
	"author": "X.B.",
  
	"background": {
		"scripts":
		[
			"background.js"
		]
	},
  
	"content_scripts": [
		{
			"matches": 
			[
                "*://wx.qq.com/*",
                "*://wx2.qq.com/*"
			],	
			
			"js": 
			[
				"content.js"
			]
		}
	],
	
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
  
	"page_action": {
		"default_icon": "icons/icon128.png",
		"default_title": "微信聊天机器人"
	},
	
	"icons": { "16": "icons/icon16.png",
           "48": "icons/icon48.png",
          "128": "icons/icon128.png" },
		  
	"permissions": 
	[
		"tabs",
		"storage"
	]
}

